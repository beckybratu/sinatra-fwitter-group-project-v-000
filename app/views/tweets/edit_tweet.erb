<%=session[:user_id]%>
<h1>Edit your tweet</h1>

<label for="old_tweet">Current tweet:</label>
<%=@tweet.content%>

<form action="/tweets/<%= @tweet.id %>" method="POST">
 <input type="hidden" name="_method" value="PATCH">

 <label for="new_tweet">Edit your tweet:</label>
 <input name="content" type="text" id="new_tweet">
 <br></br>

 <input type="submit" value="Edit Tweet">
</form>
